<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <set>
            <objectAnimator android:propertyName="scaleX" android:valueTo="0.9"/>
            <objectAnimator android:propertyName="scaleY" android:valueTo="0.9"/>
            <objectAnimator android:propertyName="alpha" android:valueTo="0"/>
        </set>
    </item>

    <item>
        <set>
            <objectAnimator android:propertyName="scaleX" android:valueTo="1"/>
            <objectAnimator android:propertyName="scaleY" android:valueTo="1"/>
            <objectAnimator android:propertyName="alpha" android:valueTo="1"/>
        </set>
    </item>
</selector>